generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma/mongo/client"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_DB_CONN_STRING")
}

model articles {
  id           Int      @id @map("_id")
  author_id    Int
  title        String
  content      String
  created_time DateTime
  updated_time DateTime
}
